"use client";

import React, { useState, useCallback } from 'react';
import { useStudioState } from '@/hooks/useStudioState';
import { Button } from '@/components/ui/button';
import { Card } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { Slider } from '@/components/ui/slider';
import { Switch } from '@/components/ui/switch';
import { Textarea } from '@/components/ui/textarea';
import { ScrollArea } from '@/components/ui/scroll-area';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { UNIFIED_IMAGE_MODELS } from '@/config/unified-image-models';
import { Play, RefreshCw, Settings2, Download, ExternalLink, Info, ChevronLeft } from 'lucide-react';
import { useToast } from '@/hooks/use-toast';
import { useRouter } from 'next/navigation';
import { OfflineIndicator } from '@/components/ui/OfflineIndicator';

export default function StudioPage() {
    const state = useStudioState();
    const { toast } = useToast();
    const router = useRouter();
    const [loading, setLoading] = useState(false);
    const [resultUrl, setResultUrl] = useState<string | null>(null);
    const [isVideo, setIsVideo] = useState(false);

    const {
        prompt, setPrompt,
        selectedModelId, setSelectedModelId,
        width, setWidth,
        height, setHeight,
        params, updateParam,
        currentModel,
        resetParams
    } = state;

    const handleSubmit = useCallback(async () => {
        if (!prompt.trim()) {
            toast({ title: "Prompt required", description: "Please enter a prompt.", variant: "destructive" });
            return;
        }

        setLoading(true);
        setResultUrl(null);

        try {
            const isPollinations = currentModel?.provider === 'pollinations';
            const endpoint = isPollinations ? '/api/generate' : '/api/replicate';

            const payload: any = {
                prompt,
                model: selectedModelId,
                width,
                height,
                ...params
            };

            const response = await fetch(endpoint, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload),
            });

            const data = await response.json();
            if (!response.ok) throw new Error(data.error || "Generation failed");

            const url = data.imageUrl || (Array.isArray(data.output) ? data.output[0] : data.output);
            
            if (url) {
                setResultUrl(url);
                setIsVideo(currentModel?.kind === 'video');
                toast({ title: "Generation complete!" });
            }
        } catch (error: any) {
            toast({ title: "Error", description: error.message, variant: "destructive" });
        } finally {
            setLoading(false);
        }
    }, [prompt, selectedModelId, width, height, params, currentModel, toast]);

    return (
        <div className="flex h-screen w-full bg-background text-foreground overflow-hidden font-sans">
            {/* --- STUDIO MAIN AREA --- */}
            <main className="flex-1 flex flex-col overflow-hidden relative border-r border-primary/5">
                {/* Header mit Exit Button */}
                <header className="h-16 flex items-center justify-between px-6 bg-card/10 backdrop-blur-md border-b border-primary/5 shrink-0 z-10">
                    <div className="flex items-center gap-4">
                        <Button 
                            variant="ghost" 
                            size="sm" 
                            onClick={() => router.push('/')} 
                            className="group gap-2 font-semibold text-muted-foreground hover:text-primary transition-colors"
                        >
                            <ChevronLeft className="w-4 h-4 transition-transform group-hover:-translate-x-1" />
                            Exit Studio
                        </Button>
                        <div className="h-4 w-px bg-primary/20 mx-2" />
                        <h1 className="text-sm font-bold tracking-wider uppercase opacity-80 flex items-center gap-2">
                            <Settings2 className="w-4 h-4 text-primary" />
                            Studio Mode
                        </h1>
                    </div>
                    
                    {resultUrl && !loading && (
                        <div className="flex gap-2">
                             <Button size="sm" variant="outline" onClick={() => window.open(resultUrl, '_blank')} className="h-8 gap-2">
                                <ExternalLink className="w-3.5 h-3.5" /> Open
                            </Button>
                        </div>
                    )}
                </header>

                {/* Preview Viewport */}
                <div className="flex-1 overflow-hidden flex items-center justify-center p-8 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-primary/5 via-transparent to-transparent">
                    {loading ? (
                        <div className="flex flex-col items-center gap-4">
                            <div className="relative">
                                <RefreshCw className="w-12 h-12 animate-spin text-primary opacity-20" />
                                <Settings2 className="w-6 h-6 text-primary absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 animate-pulse" />
                            </div>
                            <p className="text-sm font-semibold tracking-wider text-primary animate-pulse">GENERATING...</p>
                        </div>
                    ) : resultUrl ? (
                        <div className="w-full h-full flex items-center justify-center animate-in fade-in zoom-in duration-500">
                            {isVideo ? (
                                <video src={resultUrl} controls className="max-w-full max-h-full rounded-xl shadow-[0_0_50px_-12px_rgba(0,0,0,0.5)] border border-primary/10" autoPlay loop />
                            ) : (
                                <img src={resultUrl} alt="Output" className="max-w-full max-h-full object-contain rounded-xl shadow-[0_0_80px_-20px_rgba(0,0,0,0.6)] border border-primary/10" />
                            )}
                        </div>
                    ) : (
                        <div className="text-center space-y-4 opacity-10">
                            <Settings2 className="w-24 h-24 mx-auto stroke-[1.5]" />
                            <p className="text-lg font-bold tracking-tight">Select a model and prompt to begin</p>
                        </div>
                    )}
                </div>

                {/* Bottom Prompt Bar */}
                <div className="p-6 bg-card/20 backdrop-blur-xl border-t border-primary/5 space-y-4">
                    <div className="relative group">
                        <Label className="absolute -top-2.5 left-4 bg-background px-2 text-[11px] font-bold uppercase tracking-wider text-muted-foreground/70 z-10">Prompt Engine</Label>
                        <Textarea 
                            placeholder="Describe your vision..." 
                            className="h-32 resize-none bg-card/50 border-primary/10 focus:border-primary/40 rounded-xl p-4 text-base shadow-inner transition-all"
                            value={prompt}
                            onChange={(e) => setPrompt(e.target.value)}
                        />
                    </div>
                    
                    <Button 
                        size="lg" 
                        className="w-full font-bold tracking-widest text-lg h-14 shadow-lg hover:shadow-primary/20 transition-all active:scale-[0.98] gap-3" 
                        disabled={loading}
                        onClick={handleSubmit}
                    >
                        {loading ? <RefreshCw className="w-5 h-5 animate-spin" /> : <Play className="w-5 h-5 fill-current" />}
                        GENERATE
                    </Button>
                </div>
            </main>

            {/* --- STUDIO CONTROL SIDEBAR (RECHTS) --- */}
            <aside className="w-[340px] shrink-0 flex flex-col gap-6 overflow-hidden border-l border-primary/5 pl-6 bg-card/10 backdrop-blur-3xl">
                <div className="h-16 flex items-center px-4 border-b border-primary/5 shrink-0">
                    <Settings2 className="w-4 h-4 mr-3 text-primary" />
                    <h2 className="text-xs font-bold tracking-widest uppercase">Configuration</h2>
                </div>

                <ScrollArea className="flex-1 pr-4">
                    <div className="space-y-8 pb-8 pt-4">
                        {/* Model Selection */}
                        <section className="space-y-3">
                            <Label className="text-[11px] font-bold uppercase tracking-wider text-muted-foreground/70">Model Selection</Label>
                            <Select value={selectedModelId} onValueChange={setSelectedModelId}>
                                <SelectTrigger className="h-11 bg-card/40 border-primary/10 focus:ring-primary/20">
                                    <SelectValue placeholder="Select model" />
                                </SelectTrigger>
                                <SelectContent>
                                    {UNIFIED_IMAGE_MODELS.filter(m => m.enabled !== false && m.provider === 'pollinations').map(model => (
                                        <SelectItem key={model.id} value={model.id}>
                                            <div className="flex flex-col items-start py-0.5">
                                                <span className="text-sm font-semibold">{model.name}</span>
                                                <span className="text-[10px] opacity-40 uppercase tracking-tighter">{model.provider}</span>
                                            </div>
                                        </SelectItem>
                                    ))}
                                </SelectContent>
                            </Select>
                        </section>

                        {/* Dimensions */}
                        <section className="space-y-4 pt-2 border-t border-primary/5">
                            <div className="flex justify-between items-center mt-4">
                                <Label className="text-[11px] font-bold uppercase tracking-wider text-muted-foreground/70">Dimensions</Label>
                                <span className="text-xs font-mono text-primary/60">{width}Ã—{height}</span>
                            </div>
                            <div className="grid grid-cols-2 gap-3">
                                <div className="space-y-1.5">
                                    <Input 
                                        type="number" 
                                        value={width} 
                                        onChange={(e) => setWidth(Number(e.target.value))} 
                                        className="h-9 bg-card/40 border-primary/10 text-center font-mono text-sm" 
                                    />
                                    <p className="text-[9px] text-center opacity-40 uppercase tracking-widest">Width</p>
                                </div>
                                <div className="space-y-1.5">
                                    <Input 
                                        type="number" 
                                        value={height} 
                                        onChange={(e) => setHeight(Number(e.target.value))} 
                                        className="h-9 bg-card/40 border-primary/10 text-center font-mono text-sm" 
                                    />
                                    <p className="text-[9px] text-center opacity-40 uppercase tracking-widest">Height</p>
                                </div>
                            </div>
                        </section>

                        {/* Parameters */}
                        <section className="space-y-6 pt-2 border-t border-primary/5">
                            <div className="flex justify-between items-center mt-4">
                                <Label className="text-[11px] font-bold uppercase tracking-wider text-muted-foreground/70">Hyperparameters</Label>
                                <Button variant="ghost" size="icon" className="h-6 w-6 opacity-40 hover:opacity-100 hover:bg-primary/10" onClick={resetParams}>
                                    <RefreshCw className="w-3 h-3" />
                                </Button>
                            </div>

                            {/* Seed */}
                            <div className="space-y-2.5">
                                <Label className="text-[11px] font-medium opacity-60">Seed</Label>
                                <Input 
                                    type="number" 
                                    placeholder="Random" 
                                    className="h-9 bg-card/40 border-primary/10 font-mono text-sm"
                                    value={params.seed || ''}
                                    onChange={(e) => updateParam('seed', e.target.value ? Number(e.target.value) : undefined)}
                                />
                            </div>

                            {/* Quality */}
                            <div className="space-y-4">
                                <div className="flex justify-between items-center">
                                    <Label className="text-[11px] font-medium opacity-60">Output Compression</Label>
                                    <span className="text-xs font-mono text-primary/70">{params.output_quality}%</span>
                                </div>
                                <Slider 
                                    value={[params.output_quality || 100]} 
                                    min={10} max={100} step={1} 
                                    onValueChange={([v]) => updateParam('output_quality', v)}
                                />
                            </div>

                            {/* Pollinations Toggles */}
                            <div className="grid gap-4 pt-2">
                                {[
                                    { id: 'enhance', label: 'Prompt Enhance', sub: 'AI Refinement' },
                                    { id: 'transparent', label: 'Transparency', sub: 'Remove Background' },
                                    { id: 'safe', label: 'Safe Mode', sub: 'Content Filtering' }
                                ].map(item => (
                                    <div key={item.id} className="flex items-center justify-between p-3.5 rounded-xl bg-primary/[0.03] border border-primary/5 hover:bg-primary/5 transition-colors">
                                        <div className="space-y-0.5">
                                            <Label className="text-[11px] font-bold uppercase tracking-wide opacity-80 cursor-pointer" onClick={() => updateParam(item.id as any, !(params as any)[item.id])}>{item.label}</Label>
                                            <p className="text-[9px] opacity-40 uppercase tracking-tighter">{item.sub}</p>
                                        </div>
                                        <Switch checked={(params as any)[item.id]} onCheckedChange={(v) => updateParam(item.id as any, v)} />
                                    </div>
                                ))}
                            </div>

                            {/* Format */}
                            <div className="space-y-3 pt-2">
                                <Label className="text-[11px] font-medium opacity-60">Output Format</Label>
                                <Select value={params.output_format} onValueChange={(v) => updateParam('output_format', v)}>
                                    <SelectTrigger className="h-9 bg-card/40 border-primary/10">
                                        <SelectValue />
                                    </SelectTrigger>
                                    <SelectContent>
                                        <SelectItem value="webp">WEBP</SelectItem>
                                        <SelectItem value="jpg">JPG</SelectItem>
                                        <SelectItem value="png">PNG</SelectItem>
                                        {currentModel?.kind === 'video' && <SelectItem value="mp4">MP4</SelectItem>}
                                    </SelectContent>
                                </Select>
                            </div>
                        </section>
                    </div>
                </ScrollArea>
                
                <Card className="bg-primary/[0.03] border-primary/10 p-4 mt-auto mb-6 mx-4">
                    <div className="flex gap-3 text-muted-foreground/60">
                        <Info className="w-4 h-4 shrink-0 mt-0.5" />
                        <p className="text-[10px] leading-relaxed uppercase tracking-widest font-semibold">
                            Studio parameters apply directly. Results vary by model capabilities.
                        </p>
                    </div>
                </Card>
            </aside>

            <OfflineIndicator />
        </div>
    );
}